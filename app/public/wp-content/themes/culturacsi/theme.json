{
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "primary-blue",
                    "color": "#0A3B75",
                    "name": "Primary Blue"
                },
                {
                    "slug": "secondary-blue",
                    "color": "#1E5BB0",
                    "name": "Secondary Blue"
                },
                {
                    "slug": "accent-yellow",
                    "color": "#FFC20E",
                    "name": "Accent Yellow"
                },
                {
                    "slug": "accent-red",
                    "color": "#E30613",
                    "name": "Accent Red"
                },
                {
                    "slug": "accent-green",
                    "color": "#009640",
                    "name": "Accent Green"
                },
                {
                    "slug": "text-dark",
                    "color": "#333333",
                    "name": "Text Dark"
                },
                {
                    "slug": "text-light",
                    "color": "#666666",
                    "name": "Text Light"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "light-gray",
                    "color": "#f4f4f4",
                    "name": "Light Gray"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Roboto\", \"Segoe UI\", Tahoma, Geneva, Verdana, sans-serif",
                    "slug": "primary",
                    "name": "Primary Sans"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.9rem",
                    "name": "Small"
                },
                {
                    "slug": "normal",
                    "size": "1rem",
                    "name": "Normal"
                },
                {
                    "slug": "medium",
                    "size": "1.2rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "xlarge",
                    "size": "2rem",
                    "name": "Extra Large"
                }
            ]
        },
        "spacing": {
            "spacingScale": {
                "steps": 0
            },
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vh",
                "vw"
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "lineHeight": "1.6"
        },
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--text-dark)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "inherit"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xlarge)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--primary-blue)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--primary-blue)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600"
                },
                "color": {
                    "text": "var(--wp--preset--color--primary-blue)"
                }
            }
        }
    }
}